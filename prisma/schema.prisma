datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @map("_id")
  email    String    @unique
  name     String
  password String
  age      Int
  country  String
  cart     Cart?
  products Product[]
  cloth    Cloth[]
}

model Product {
  id     String @id @map("_id")
  pcode  String @unique
  userId String
  User   User   @relation(fields: [userId], references: [email])

  title  String
  desc   String
  rating Int
  price  Int
  // Cart   Cart?   @relation(fields: [cartId], references: [id])
  // cartId String?
}

//todo  sooner cart features to be added
model Cart {
  id       String      @id @map("_id")
  uId      String      @unique
  user     User        @relation(fields: [uId], references: [email])
  products CartProduct
  // titem    Int
  // tprice   Int
  // products Product[]
  // Product  Product[]
}

type CartProduct {
  pcode    String
  quantity Int
}

