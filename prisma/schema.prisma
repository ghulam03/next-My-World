model User {
  id       String @id @map("_id")
  email    String @unique
  name     String
  password String
  age      Int
  country  String
}

model Product {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  pcode    String @unique
  desc     String
  rating   Int
  category String
}

model Animal {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  color   String
  desc    String
  age     Int
  country String
}

model Post {
  id           String         @id @map("_id")
  category     String
  title        String         @unique
  desc         String
  writer       String
  // author       User?          @relation(fields: [authorId], references: [id])
  // authorId     String         @db.ObjectId
  PostCategory PostCategory[]
}

model PostCategory {
  id       String @id @map("_id")
  category String
  subCat   String
  postId   String
  post     Post   @relation(fields: [postId], references: [id])
}
