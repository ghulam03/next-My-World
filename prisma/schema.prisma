datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Animal {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  age     Int
  country String
  color   String
}

model User {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  email   String @unique
  name    String
  age     Int
  country String
  password String
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  viewCount Int      @default(0)
  authorId  String?
}
