model User {
  id       String @id  @map("_id") 
  email    String @unique
  name     String
  password String
  age      Int
  country  String
}


model Product {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  pcode    String @unique
  desc     String
  rating   Int
  category String
}

model Animal {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  color   String
  desc    String
  age     Int
  country String
}

model Blog {
  id           String         @id @map("_id")
  category     String
  title        String         
  desc         String
  // author       User?          @relation(fields: [authorId], references: [id])
  // authorId     String         @db.ObjectId
  BlogCategory BlogCategory[]
}

model BlogCategory {
  id        String @id @map("_id")
  categoryy String
  subCat    String
  blogId    String
  blog      Blog   @relation(fields: [blogId], references: [id])
}
