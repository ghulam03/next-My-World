generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  name     String?
  age      Int?
  country  String?
  animals  Animal[]
}

model Animal {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  age     Int?
  color   String?
  country String
  user    User    @relation(fields: [userId], references: [id])
  userId  String     @unique @db.ObjectId
}
