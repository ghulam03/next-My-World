datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Animal {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  color   String
  desc String
  age     Int
  country String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  age      Int
  country  String
}

model Blog {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  author     String
  title    String @unique
  desc     String
}
