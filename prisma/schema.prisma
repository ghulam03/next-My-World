datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Animal {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  age     Int
  country String
  color   String
}

model User {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  email   String @unique
  name    String
  password String
  age     Int
  country String
}

